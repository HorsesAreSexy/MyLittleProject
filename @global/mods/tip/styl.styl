.tip
	position absolute left 0 top 0
	opacity 0
	z-index -1
	pointer-events none
	&.act
		opacity 1
		z-index 999
	.shadow
		position absolute top 0 left 0
		width 100%
		height 100%
		border-radius 6px
		box-shadow 0 0 4px 0 black
	.tail
		position absolute
		width 10px
		height @width
		box-shadow 0 0 4px 0 black
		background white
	.body
		font-size 18px
		padding 3px 6px
		color: color.main
		background white
		border-radius 6px
		max-height 200px
		position relative